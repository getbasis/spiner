_spinner-dots() {
  display: inline-block;
  font-size: 0;
}

_spinner-dots__dot() {
  _circle(10px);
  display: inline-block;
  animation: _spinner-dots 2s ease-in 0s infinite;

  &:nth-child(2) {
    animation-delay: .1s;
  }

  &:nth-child(3) {
    animation-delay: .2s;
  }

  @keyframes _spinner-dots {
    0% {
      transform: scale(1);
    }
    10% {
      transform: scale(1.3);
    }
    20% {
      transform: scale(1);
    }
    100% {
      transform: scale(1);
    }
  }
}

