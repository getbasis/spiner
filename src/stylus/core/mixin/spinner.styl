_spinner-pulse() {
  display: inline-flex;
  justify-content: space-between;
}

_spinner-pulse__bar() {
  height: 16px;
  width: 5px
  display: block;
  animation: _spinner-pulse 2s ease-in 0s infinite;

  &:nth-child(2) {
    animation-delay: .1s;
  }

  &:nth-child(3) {
    animation-delay: .2s;
  }

  @keyframes _spinner-pulse {
    0% {
      transform: scaleY(1);
    }
    10% {
      transform: scaleY(1.4);
    }
    20% {
      transform: scaleY(1);
    }
    100% {
      transform: scaleY(1);
    }
  }
}

//
