_spinner-circle() {
  _circle(20px);
  border: 3px solid transparent;
  animation: _spinner-circle 1s linear 0s infinite;

  @keyframes _spinner-circle {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
}
